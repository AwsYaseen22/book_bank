<!DOCTYPE html>
<html lang="en">

    <head>
        <%- include('../../partials/head'); %>
    </head>

    <body class="container">

        <header>
            <%- include('../../partials/header.ejs'); %>

        </header>




        <main>
            <!-- Page Content -->
            <div class="container">


                <!-- Portfolio Item Row -->
                <div class="row p-5">

                    <div class="col-md-3">
                        <img class="img-fluid d-block mx-auto shadow "
                            src=" <%=book.cover ? book.cover : '/images/no-image.png' %>" alt="Book cover">
                    </div>

                    <div class="col-md-9">
                        <div class="p-4 mb-3 bg-light rounded ">
                            <h3 class="my-3">
                                <%= book.title%>
                            </h3>
                            <h5>
                                By: <%= book.author%>
                            </h5>
                            <hr>
                            <dl class="row">
                                <dt class="col-2">Read by:</dt>
                                <dd class="col-10">
                                    <%= book.user.displayName %> -
                                        <small>
                                            <%= formatDate(book.createdAt, 'DD MMMM, YYYY' ) %>
                                        </small>
                                </dd>
                            </dl>

                        </div>

                        <br>
                        <div class="p-4 mb-3 bg-light rounded ">
                            <h5>
                                Notes:
                            </h5>
                            <p>
                                <%= book.notes%>
                            </p>
                        </div>
                        <div class="p-4 mb-3 bg-light rounded ">
                            <h3 class="my-3">Quotes:</h3>
                            <ul>
                                <li>
                                    <%= book.quotes%>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
                <!-- /.row -->



            </div>
            <!-- /.container -->

        </main>













        <footer class="fixed-bottom">
            <%- include('../../partials/footer.ejs'); %>
        </footer>

        <!-- <script>
            setTimeout( () => {
                document.getElementById( 'image-tag' ).src = '<%= image%>'
            }, 1000 );
        </script> -->
    </body>

</html>